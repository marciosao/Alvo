@using (Html.BeginForm("ImportarCandidatos", "Candidato", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="group background-cinza">
        <div class="group">
            <div class="row">
                <div class="col-md-7 col-sm-7">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div>
                            @Html.Label("Processo Seletivo", htmlAttributes: new { @class = "control-label " })
                            @*@Html.DropDownList("ProcessoSeletivo", null, "Selecione", new { @class = "js-example-basic-single js-states form-control select2-hidden-accessible"})<br />*@
                            @Html.DropDownList("ProcessoSeletivo", null, "Selecione", new { @class = "js-example-basic-single js-states form-control", @Id = "ProcessoSeletivo" })<br />

                            @*@Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="group">
            <div class="row">
                <div class="col-md-7 col-sm-7">
                    <div class="form-group">
                        <div>
                            @Html.Label("Arquivo", htmlAttributes: new { @class = "control-label " })
                            <input type="file" name="FileUpload" class="fileUpload form-control" id="txtCaminhoArquivoCSV" style="width:300px">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <input type="submit" value="Importar" class="btn btn-primary" />
        </div>
    </div>
}

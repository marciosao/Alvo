<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=EmulateIE9;IE=EmulateIE10;IE=EmulateIE11" />
    <title>@ViewBag.Title - Comprasnet.BA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="alvo">
<div class="container body-content">
    @*<div style="text-align:center">
        <img alt="" id="imgLogomarcaComprasnet" src="~/Content/img/Logo_ComprasNet.png" class="center" />
    </div>*@
    @RenderBody()
    <hr/>
    @*<div style="text-align: center">
        <img alt="" id="imgLogomarcaGoverno" src="~/Content/img/Logo_Governo_Bahia.gif" class="center"/>
    </div>*@
    <footer>
        <p style="text-align: center">&copy; @DateTime.Now.Year - ALVO</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
   // all content including images has been loaded
   window.onload = function(){
       // post our message to the parent
       window.parent.postMessage(
           // get height of the content
           document.body.scrollHeight
           // set target domain
           , "*"
       );
   };

   function PageResize(){
       window.parent.postMessage(
           document.body.scrollHeight
           , "*"
       );
   }

   setInterval(function () { PageResize(); }, 2000);

    </script>

</body>
</html>

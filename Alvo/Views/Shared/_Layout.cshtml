<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/Scripts/jquery-3.1.0.min.js")
    @Scripts.Render("~/bundles/jquery")


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="alvo">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Alvo", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
            </div>
            @Html.Action("_MenuResult", "Home")

        </div>
    </div>
    <div class="container body-content">
        <div id="page-title" class="row page-title">
            <h2 class="col-md-12">
                @ViewBag.Modulo <span style="color: #a0a0a0">|&nbsp;@ViewBag.Title</span>
            </h2>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ALVO - Processo Seletivo</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <div id="divCarregando" class="progresso">
        <img src="@Url.Content("~/Content/img/loading.gif")" />
        <br />
        Carregando...
    </div>
</body>
<script type="text/javascript">
    $(document).ready(function () {
        $(".js-example-basic-single").select2();
    });

    $(function () {
        $('[rel=popover]').popover({
            html: true,
            content: function () {
                return $('#content-pop').html();
            }
        });
    });
</script>
</html>

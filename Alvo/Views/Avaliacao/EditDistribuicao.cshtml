                            <div>
                                @Html.Label("Área de Concentracao", htmlAttributes: new { @class = "control-label " })
                                @*@Html.DropDownList("Professores", null, "Selecione", new { @class = "js-example-basic-single js-states form-control select2-hidden-accessible"})<br />*@
                                @Html.DropDownList("Professores", null, "Selecione", new { @class = "js-example-basic-single js-states form-control" })<br />


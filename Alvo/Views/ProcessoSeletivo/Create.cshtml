@using Alvo.Common.HtmlHelpers
@model Alvo.ViewModels.ProcessoSeletivoViewModel

@{
    ViewBag.Modulo = "Processo Seletivo";
    ViewBag.Title = "Novo";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-10 col-sm-10">
                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div>
                        @Html.Label("Título", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 col-sm-3">
                @Html.ValidationMessageFor(model => model.NumeroEdital, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div>
                        @Html.Label("Nº Edital", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.NumeroEdital, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>

            <div class="col-md-2 col-sm-2">
                @Html.ValidationMessageFor(model => model.DataInicio, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div>
                        @Html.Label("Data Início", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.DataInicio, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-sm-2">
                @Html.ValidationMessageFor(model => model.DataFim, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div>
                        @Html.Label("Data Fim", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.DataFim, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-10 col-sm-10">
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div>
                        @Html.Label("Descrição", htmlAttributes: new { @class = "control-label" })
                        @Html.TextAreaFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control"} })
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 col-sm-3">
                @Html.ValidationMessageFor(model => model.Liberado, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div>
                        @Html.Label("Processo Liberado", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Liberado)
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-3">
                @Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div>
                        @Html.Label("Processo Ativo", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Ativo)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
                @Html.ActionLink("Voltar", "Index", "", new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}


@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@
@Scripts.Render("~/Scripts/jquery.inputmask.js")

@Html.RenderScripts()

}
